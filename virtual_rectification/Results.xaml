<Window x:Class="virtual_rectification.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:virtual_rectification"
        mc:Ignorable="d"
        Title="РЕЗУЛЬТАТ" Height="500" Width="900"
        AllowsTransparency="False" Background="Transparent"
        WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize">
    
    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="lightBlue" Offset="0.0"/>
                    <GradientStop Color="LightSteelBlue" Offset="0.5"/>
                    <GradientStop Color="Aquamarine" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        
        
        
        
    </Grid>
</Window>
